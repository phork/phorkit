{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "lib": ["src"],
      "lib/*": ["src/*"],
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "compositions": ["src/compositions"],
      "compositions/*": ["src/compositions/*"],
      "config": ["src/config"],
      "config/*": ["src/config/*"],
      "context": ["src/context"],
      "context/*": ["src/context/*"],
      "docs": ["src/docs"],
      "docs/*": ["src/docs/*"],
      "hooks": ["src/hooks"],
      "hooks/*": ["src/hooks/*"],
      "icons": ["src/icons"],
      "icons/*": ["src/icons/*"],
      "postcss": ["src/postcss"],
      "postcss/*": ["src/postcss/*"],
      "stories": ["src/stories"],
      "stories/*": ["src/stories/*"],
      "styles": ["src/styles"],
      "styles/*": ["src/styles/*"],
      "types": ["src/types"],
      "types/*": ["src/types/*"],
      "utils": ["src/utils"],
      "utils/*": ["src/utils/*"],
    },
    "removeComments": false,
    "resolveJsonModule": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019",
    "typeRoots": ["node_modules/@types", "src/*.d.ts"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", "lib", ".docz"]
}
